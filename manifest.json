{
  "manifest_version": 3,
  "name": "Advance Auto Refresh Extension",
  "version": "1.4",
  "description": "Auto refresh tabs with random intervals with Filters and many more features.",
  "author": "Soovex IT Agency",
  "permissions": ["storage", "tabs", "alarms"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "badge_background_color": "#007AFF",
    "badge_text_color": "#FFFFFF"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }

}

